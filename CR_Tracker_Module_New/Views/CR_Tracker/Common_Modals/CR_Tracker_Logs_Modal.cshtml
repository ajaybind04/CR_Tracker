<div class="modal fade" id="cr_status_details">
    <input type="hidden" id="txt_hidden_cr_remark_id" />
    <input type="hidden" id="txt_hidden_cr_id" />
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">CR Tracker Follow-Up | Status | Remark</h4>
                <div class="ml-auto">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <button type="button" class="btn btn-success btn-sm" id="btn_add_cr_remark" > <i class="far fa-comment-alt"></i> Add Remark</button>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="txt-message-reply" style="display:none;">
