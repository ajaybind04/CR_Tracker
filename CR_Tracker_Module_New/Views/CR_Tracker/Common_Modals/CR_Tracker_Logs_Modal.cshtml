                        <input type="submit" value="SAVE" id="btn_save_cr_remark_details" />
                    </div>
                </div>
                <div class="row">
                    <!--Load TimeLine Details Using Ajax (CR_Remark_DetailsP)-->
                    <div class="col-md-12" style="height: 450px; overflow: auto;">
                        <div class="overlay timeline-overlay" style="height: 100%;left: 0;position: absolute;top: 0; width: 100%;border-radius: 0.25rem; -ms-flex-align: center; align-items: center; background: rgba(255, 255, 255, 0.7); display: -ms-flexbox;  display: flex;  -ms-flex-pack: center;  justify-content: center;  z-index: 50;">
                            <i class="fas fa-2x fa-sync-alt fa-spin" style="font-size: 60px;"></i>
                        </div>
                        <idv id="cr_remark_timeline_details"></idv>
